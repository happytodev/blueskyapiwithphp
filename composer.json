{
    "name": "happytodev/blueskyapiwithphp",
    "description": "A PHP Package to interact with Bluesky API",
    "keywords": [
        "happytodev",
        "bluesky",
        "api",
        "php"
    ],
    "homepage": "https://github.com/happytodev/blueskyapiwithphp",
    "license": "MIT",
    "authors": [
        {
            "name": "Frédéric Blanc",
            "email": "happytodev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "pestphp/pest": "^2.20",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Happytodev\\Blueskyapiwithphp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Happytodev\\Blueskyapiwithphp\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
